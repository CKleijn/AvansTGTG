@model IEnumerable<Packet>
@{
    ViewData["Title"] = "Alle pakketten";
    var isStudent = User.HasClaim("Role", "Student");
    var isCanteenEmployee = User.HasClaim("Role", "CanteenEmployee");
}

<div class="row">
    @foreach (var packet in @Model) {
        <div class="col-3 mb-5">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="https://8xpub.com/img/p/vn-default-large_default.jpg" alt="Default img">
                <div class="card-body">
                    <h5 class="card-title">@packet.Name</h5>
                    <div class="btn-group">
                        @if (isStudent || !isStudent && !isCanteenEmployee)
                        {
                            <a class="btn btn-primary" asp-controller="Packet" asp-action="Detail" asp-route-id="@packet.PacketId">Alle details</a>
                            <form asp-controller="Packet" asp-action="ReservePacket" asp-route-id="@packet.PacketId" method="post">
                                <button class="btn btn-primary" type="submit">Reserveer</button>
                            </form>
                        }
                        else if (isCanteenEmployee)
                        {
                            <a class="btn btn-primary" asp-controller="Packet" asp-action="Detail" asp-route-id="@packet.PacketId">Alle details</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>